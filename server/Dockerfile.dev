# Fixed Development Dockerfile for Backend (ARM64 compatible)
FROM node:18-alpine

# Install required dependencies for Prisma and development
RUN apk add --no-cache \
    openssl \
    openssl-dev \
    libc6-compat \
    curl \
    bash

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client with correct binary targets
RUN npx prisma generate

# Create necessary directories
RUN mkdir -p uploads logs

# Expose port
EXPOSE 5000

# Start development server with hot reload
CMD ["npm", "run", "dev"]
