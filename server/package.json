{
  "name": "finbridge-api",
  "version": "1.0.0",
  "description": "FinBridge Enterprise API Server",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
