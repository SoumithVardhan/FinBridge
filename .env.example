# FinBridge Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
API_PORT=5001
FRONTEND_PORT=3000

# Frontend API Configuration
VITE_API_URL=http://localhost:5001/api
REACT_APP_API_URL=http://localhost:5001/api

# Database Configuration
POSTGRES_DB=finbridge
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_db_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://your_db_user:your_secure_db_password@postgres:5432/finbridge?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# JWT Configuration - CHANGE THESE SECRETS!
JWT_ACCESS_SECRET=your_jwt_access_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_minimum_32_characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration - CHANGE THESE!
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=your_32_character_encryption_key_here
COOKIE_SECRET=your_cookie_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_CONTACT_MAX=50

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/finbridge.log

# API Documentation
SWAGGER_ENABLED=true

# Email Configuration (Local Testing)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
FROM_EMAIL=noreply@finbridge.local
FROM_NAME=FinBridge Local

# Production Email (Uncomment and configure for production)
# SMTP_HOST=your.smtp.server.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your_email@domain.com
# SMTP_PASS=your_email_password
# FROM_EMAIL=noreply@yourdomain.com
# FROM_NAME=FinBridge
